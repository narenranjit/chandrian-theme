[
    {
        "scope": [
            "markup.bold.markdown"
        ],
        "settings": {
            "foreground": "{{textProminent}}"
        }
    },
    {
        "scope": [
            "markup.italic.markdown"
        ],
        "settings": {
            // "foreground": "{{textProminent}}",
            "fontStyle": "italic"
        }
    },
    {
        "scope": [
            "markup.fenced_code.block",
        ],
        "settings": {
            "foreground": "{{keywordGray}}"
        }
    },
    {
        "scope": [
            "markup.underline.link.markdown"
        ],
        "settings": {
            // "fontStyle": "underline"
        }
    },
    {
        "scope": [
            "markup.quote.markdown"
        ],
        "settings": {
            "foreground": "{{alt4}}"
            , "fontStyle": "italic"
        }
    },
    {
        "scope": [
            "heading.1.markdown",
            "markup.heading.setext.1.markdown"
        ],
        "settings": {
            "foreground": "{{mainVariant}}",
            "fontStyle": "bold"
        }
    },
    {
        "scope": [
            "heading.2.markdown",
            "markup.heading.setext.2.markdown"
        ],
        "settings": {
            "foreground": "{{mainDarker1}}"
        }
    },
    {
        "scope": [
            "heading.3.markdown"
        ],
        "settings": {
            "foreground": "{{main}}"
        }
    },
    {
        "scope": [
            "heading.4.markdown"
        ],
        "settings": {
            "foreground": "{{mainLight1}}"
        }
    },
    {
        "scope": [
            "heading.5.markdown",
            "heading.6.markdown"
        ],
        "settings": {
            "foreground": "{{mainLightest}}"
        }
    },
    {
        "scope": [
            "beginning.punctuation.definition.quote.markdown",
            "beginning.punctuation.definition.list.markdown"
        ],
        "settings": {
            "foreground": "{{keywordGray}}"
        }
    },
    {
        "scope": [
            "punctuation.definition.markdown",
            "punctuation.separator.key-value.markdown",
            "punctuation.definition.constant.markdown",
            "punctuation.definition.bold.markdown",
            "punctuation.definition.italic.markdown"
        ],
        "settings": {
            "foreground": "{{commentGray}}"
        }
    },
    {
        "scope": [
            "punctuation.definition.string.markdown",
            "punctuation.definition.string.begin.markdown",
            "punctuation.definition.string.end.markdown",
            "punctuation.definition.metadata.markdown"
        ],
        "settings": {
            "foreground": "{{commentGray}}"
        }
    },
    {
        "scope": [
            "meta.link.inline.markdown",
            "meta.link.reference.markdown",
            "meta.link.reference.def.markdown",
            "string.other.link.title.markdown",
            "string.other.link.description.markdown",
            "string.other.link.description.title.markdown",
            "meta.link.inet.markdown markup.underline.link.markdown"
        ],
        "settings": {
            "foreground": "{{alt1}}"
        }
    },
    {
        "scope": [
            "markup.underline.link.markdown",
            "markup.underline.link.image.markdown"
        ],
        "settings": {
            "foreground": "{{commentGrayProminent}}"
            // , "fontStyle": "underline"
        }
    }, 
    {
        "scope": [
            "constant.other.reference.link.markdown"
        ],
        "settings": {
            "foreground": "{{alt1}}"
        }
    }, 
    
    {
        "scope": [
            "markup.inline.raw.string.markdown"
        ],
        "settings": {
            "foreground": "{{alt1Complentary}}"
        }
    },
    {
        "scope": [
            //HR
            "meta.separator.markdown"
        ],
        "settings": {
            "foreground": "{{keywordGray}}"
        }
    }
]
